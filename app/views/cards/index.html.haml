- model_class = Card

- if user_signed_in?
  .clearfix
    = link_to new_card_path, :class => 'btn btn-primary pull-right' do
      %span.glyphicon.glyphicon-send
      = t('.new', :default => t("helpers.links.new"))
  %br/

- @cards.each_slice(4) do |arr_of_4|
  .row
    - arr_of_4.each do |card|
      .col-md-3.col-sm-6.col-xs-12
        .panel.panel-default.rc-card
          .panel-heading
            = raw card.question

          .panel-body
            %div
              :markdown
                #{card.answer}
            .rc-toolbar
              %span.rc-createtime= "#{distance_of_time_in_words(Time.now, card.created_at)} ago"
              - if user_signed_in? && card.user == current_user
                .pull-right
                  = link_to card_path(card), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'rc-delete btn btn-xs' do
                    %span.glyphicon.glyphicon-trash
                    = t('.destroy', :default => t("helpers.links.destroy"))
                  = link_to edit_card_path(card), :class => 'rc-edit btn btn-xs' do
                    %span.glyphicon.glyphicon-edit
                    = t('.edit', :default => t("helpers.links.edit"))
