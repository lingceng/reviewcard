- model_class = Card

= render :partial => "card", :locals => { card: @card }



.pull-right
  = link_to 'Back to My Cards', cards_path, :class => 'btn btn-link'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_card_path(@card), :class => 'btn btn-default'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), card_path(@card), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
  = link_to new_card_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
      = 'Add Another'
