!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = render_page_title
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'logo/128x128.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'logo/128x128.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'logo/96x96.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'logo/64x64.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"


  %body
    .navbar.navbar-default.navbar-inverse.navbar-fixed-top.rc-navbar
      .container-fluid
        .navbar-header
          %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to root_path,  class: 'navbar-brand' do
            %span.glyphicon.glyphicon-send
            Review Card
        .navbar-collapse.collapse.navbar-responsive-collapse
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li
                = link_to cards_path do
                  %span.glyphicon.glyphicon-th-large
                  My Cards
              %li
                = link_to  edit_user_registration_path do
                  %span.glyphicon.glyphicon-user
                  = current_user.email
              %li
                = link_to destroy_user_session_path, method: :delete do
                  %span.glyphicon.glyphicon-log-out
                  Logout
            - else
              %li
                = link_to new_user_session_path do
                  %span.glyphicon.glyphicon-log-in
                  Login


    .container-fluid.rc-content
      .row
        .col-md-10.col-md-offset-1
          = bootstrap_flash
          = yield

    %footer.rc-footer
